@model EducationManual.ViewModels.UserViewModel

@{
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
            <h4>Delete @Model.Role</h4>
        </div>
        <div class="modal-body">
            <p>
                Realy delete
                @Html.DisplayFor(model => model.FirstName)
                @Html.DisplayFor(model => model.SecondName)
                ?
            </p>
        </div>
        <div class="modal-footer">
            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="hidden" value="@Model.Role" name="Role" />
            <input type="hidden" value="@Model.SchoolId" name="SchoolId" />
            <input type="hidden" value="@Model.Email" name="Email" />
            <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />
            <input type="submit" value="Delete" class="btn btn-primary" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
}