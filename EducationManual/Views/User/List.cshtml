@model IEnumerable<EducationManual.ViewModels.UserViewModel>
@using EducationManual.Models

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<p>
    <h2>Users in role: @ViewBag.UsersRole</h2>
</p>

<br />

<table class="table table-striped table-hover ">
    <tr class="success">
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        @if (User.IsInRole("SuperAdmin"))
        {
            <th>
                School Name
            </th>
            <th>Actions</th>
        }
    </tr>

    @{ int i = 1;}
    @foreach (var item in Model)
    {
        <tr class="active">
            <td onclick="location.href = '/User/Details?userId=@item.Id&returnURL=@Request.Url'">
                @i
                @{ i++;}
            </td>
            <td onclick="location.href = '/User/Details?userId=@item.Id&returnURL=@Request.Url'">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td onclick="location.href = '/User/Details?userId=@item.Id&returnURL=@Request.Url'">
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td onclick="location.href = '/User/Details?userId=@item.Id&returnURL=@Request.Url'">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td onclick="location.href = '/User/Details?userId=@item.Id&returnURL=@Request.Url'">
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            @if (User.IsInRole("SuperAdmin"))
            {
                <td onclick="location.href = '/User/Details?userId=@item.Id&returnURL=@Request.Url'">
                    @Html.DisplayFor(modelItem => item.SchoolName)
                </td>
                <td>
                    <div class="btn btn-primary btn-xs">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id, userRole = ViewBag.UsersRole },
                                                                      new { @class = "delItem", @style = "text-decoration:none;color:white;" })
                    </div>
                </td>
            }
        </tr>
    }

</table>

@if ((User.IsInRole("SuperAdmin") || User.IsInRole("SchoolAdmin")) && DataSave.SchoolName != "" && ViewBag.UsersRole == "Teacher")
{
    <p>
        @Html.ActionLink("Create new teacher", "Register", "Account", new { schoolId = DataSave.SchoolId, role = "Teacher" }, new { @class = "btn btn-default" })
    </p>
}

@if ((User.IsInRole("SuperAdmin") || User.IsInRole("SchoolAdmin")) && DataSave.SchoolName != "" && ViewBag.UsersRole == "Student")
{
    <p>
        @Html.ActionLink("Back to classroms list", "List", "Classroom", new { id = DataSave.SchoolId }, new { @class = "btn btn-default" })
        @Html.ActionLink("Create new student", "Register", "Account", new { schoolId = DataSave.SchoolId, classroomId = ViewBag.ClassroomId, role = "Student" }, new { @class = "btn btn-default" })
    </p>
}

@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".delItem").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}