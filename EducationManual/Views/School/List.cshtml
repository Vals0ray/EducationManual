@model IEnumerable<EducationManual.Models.School>
@using System.Linq;
@using EducationManual.ViewModels;

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<p>
    <h3>Schools</h3>
</p>

<br/>

<table class="table table-striped table-hover ">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            School admin
        </th>
        <th>
            Users
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classrooms)
        </th>
        <th></th>
    </tr>

    @{ int i = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{ i++;}
                @i
            </td>
            <td>
                @Html.ActionLink(item.Name, "List", "Classroom", new { id = item.SchoolId }, null)
            </td>
            <td>
                @if (!item.SchoolAdminId.IsEmpty())
                {
                    <a href="/User/Details?userId=@item.SchoolAdminId&returnURL=@Request.Url">
                        @Html.DisplayFor(modelItem => item.ApplicationUsers.Single(u => u.Id == item.SchoolAdminId).FirstName)
                        @Html.DisplayFor(modelItem => item.ApplicationUsers.Single(u => u.Id == item.SchoolAdminId).SecondName)
                    </a>
                }
                else
                {
                    <div>-</div>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUsers.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classrooms.Count)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id = item.SchoolId }) |
                @Html.ActionLink("Delete", "Delete", new SchoolViewModel() { Id = item.SchoolId, Name = item.Name }, new { @class = "delItem" })
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Create new school", "Create", null, new { @class = "btn btn-default" })
</p>

@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
           $(".delItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}