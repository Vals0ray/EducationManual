@model IEnumerable<EducationManual.Models.ApplicationRole>
 
@{
    ViewBag.Title = "Роли";
}
 
<h2>Roles</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
 
@foreach (var item in Model) {
    <tr>
        <td>@item.Name</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
