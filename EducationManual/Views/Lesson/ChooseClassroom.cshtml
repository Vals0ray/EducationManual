@model IEnumerable<EducationManual.Models.Classroom>

<p>
    <h3>
        Choose classroom
    </h3>
</p>

<br/>

<table class="table table-striped table-hover ">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Students)
        </th>
    </tr>

@{ int i = 0;}
@foreach (var item in Model) {
    <tr>
        <td>
            @{ i++;}
            @i
        </td>
        <td>
            @Html.ActionLink(item.Name, "ChooseStudent", new { classroomId = item.ClassroomId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Students.Count)
        </td>
    </tr>
}

</table>
