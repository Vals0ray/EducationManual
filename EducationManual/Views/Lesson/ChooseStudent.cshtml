@model IEnumerable<EducationManual.ViewModels.LessonViewModel>

<p>
    <h3>
        Choose tasks for students in classroom: @ViewBag.ClassroomName
    </h3>
</p>

<br/>

<table class="table table-striped table-hover ">
    <tr>
        <th>
            #
        </th>
        <th>
            Student
        </th>
        <th>
            Task
        </th>
    </tr>

@{ int i = 0;}
@foreach (var item in Model) {
    <tr>
        <td>
            @{ i++;}
            @i
        </td>
        <td>
            @Html.DisplayFor(iteme => item.Student.ApplicationUser.FirstName)

            @Html.DisplayFor(iteme => item.Student.ApplicationUser.SecondName)
        </td>
        <td>
            @if (item.TestId == null)
            {
                @Html.ActionLink("Select", "ChooseTask", new { studentId = item.Student.Id, classroomId = ViewBag.ClassroomId })
            }
            else
            {
                @Html.DisplayFor(iteme => item.TestId)
            }
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Start Lesson", "StartLesson", null, new { @class = "btn btn-default" })
</p>