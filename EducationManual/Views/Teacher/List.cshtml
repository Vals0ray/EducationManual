@model IEnumerable<EducationManual.Models.ApplicationUser>
@using EducationManual.Models;

<p>
    <h2>Teachers list</h2>
</p>

<br/>

<table class="table table-striped table-hover ">
    <tr class="success">
        <th>
            #
        </th>
        <th>
            First name
        </th>
        <th>
            Second name
        </th>
        <th>
            E-mail
        </th>
        <th>
            Phone number
        </th>
    </tr>

    @{ int i = 0;}
    @foreach (var item in Model)
    {
        <tr class="active" onclick="location.href = '/User/Details?userId=@item.Id&returnURL=@Request.Url'">
            <td>
                @{ i++;}
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
        </tr>
    }

</table>

@if (!User.IsInRole("Teacher") || !User.IsInRole("Student"))
{
    <p>
        @Html.ActionLink("Create new teacher", "Register", "Account", new { schoolId = DataSave.SchoolId, role = "Teacher" },  new { @class = "btn btn-default" })
    </p>
}