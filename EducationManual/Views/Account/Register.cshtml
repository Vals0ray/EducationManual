@model EducationManual.ViewModels.RegisterModel

@{
    ViewBag.Title = "Register";
}

<h2>Registration new @ViewBag.Role</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(false)
        <input type="hidden" name="schoolId" value="@ViewBag.SchoolId" />
        <input type="hidden" name="classroomId" value="@ViewBag.ClassroomId" />
        <input type="hidden" name="role" value="@ViewBag.Role" />
        <div>
            <p class="form-group">
                <label>First name</label><br />
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </p>

            <p class="form-group">
                <label>Second name</label><br />
                @Html.EditorFor(model => model.SecondName, new { htmlAttributes = new { @class = "form-control" } })
            </p>

            <p class="form-group">
                <label>Email</label><br />
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </p>

            <p class="form-group">
                <label>Password</label><br />
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </p>

            <p class="form-group">
                <label>Confirm password</label><br />
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control" } })
            </p>
        </div>

        <div>
            <p>
                <button type="submit">Submit</button>
            </p>
        </div>
    </div>
}