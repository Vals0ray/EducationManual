@model EducationManual.ViewModels.LoginModel

@{
    ViewBag.Title = "Sign in";
}

@using (Html.BeginForm(Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" })))
{
    @Html.AntiForgeryToken()



    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="col-md-offset-1">
                        <h2 style="margin-top:7px">@ViewBag.Title</h2>
                        <h4>Use a local account to log in.</h4>
                    </div>
                </div>
                <div class="panel-body">
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <div class="col-md-offset-1">
                            <label for="inputEmail" class="control-label col-xs-2">E-mail</label>
                            <div class="col-xs-10">
                                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail", @placeholder = "E-mail" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-1">
                            <label for="inputPassword" class="control-label col-xs-2">Password</label>
                            <div class="col-xs-10">
                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @id = "inputPassword", @placeholder = "Password" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3">
                            <div class="checkbox" style="padding-top:0px">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-5">
                            <button type="submit" class="btn btn-primary">SIGN IN</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
