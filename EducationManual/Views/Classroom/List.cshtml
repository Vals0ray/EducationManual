@model EducationManual.Models.School

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<p>
    <h3>Classrooms</h3>
</p>

<br/>

<table class="table table-striped table-hover ">
    <tr>
        <th>
            #
        </th>
        <th>
            Name
        </th>
        <th>
            Students count
        </th>
        <th></th>
    </tr>

    @{ int i = 0; }
    @foreach (var item in Model.Classrooms)
    {
        <tr>
            <td>
                @{ i++;}
                @i
            </td>
            <td>
                @Html.ActionLink(item.Name, "List", "Student", new { id = item.ClassroomId }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.Count)
            </td>
            <td>
                
                @if (!User.IsInRole("Teacher"))
                {
                    @Html.ActionLink("Update", "Update", new { id = item.ClassroomId })
                    <label>|</label>
                    @Html.ActionLink("Delete", "Delete", item, new { @class = "delItem" })
                }
            </td>
        </tr>
    }

</table>

@if (!User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Create new classroom", "Create", null, new { @class = "btn btn-default" })
    </p>
}

@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".delItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}